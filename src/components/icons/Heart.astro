---
interface Props {
  size?: 'sm' | 'md' | 'lg'
  bg?: boolean
  rounded: 'full' | 'md' | 'lg'
}

const {size, bg, rounded} = Astro.props
---

<div class:list={[
  'flex items-center justify-center p-2 text-sky-800 cursor-pointer',
  `rounded-${rounded}`,
  bg ? 'bg-skyblue-200' : 'bg-transparent',
  size === 'sm' ? 'size-4' : size === 'md' ? 'size-6' : size === 'lg' ? 'size-10' : 'size-3'
]}>
  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-full">
    <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
  </svg>

  <slot name="text" />
</div>