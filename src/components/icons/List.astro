---
interface Props {
  size?: 'sm' | 'md' | 'lg'
  bg?: boolean
  rounded: 'full' | 'md' | 'lg' | 'none'
}

const {size, bg, rounded} = Astro.props
---

<div class:list={[
  'flex items-center justify-start gap-x-4 text-sky-800',
  `rounded-${rounded}`,
  bg ? 'bg-skyblue-200' : 'bg-transparent',
  
]}>
	<div class:list={[
		size === 'sm' ? 'size-4' : size === 'md' ? 'size-6' : size === 'lg' ? 'size-10' : 'size-3'
	]}>
		<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-full">
			<path stroke-linecap="round" stroke-linejoin="round" d="M8.25 6.75h12M8.25 12h12m-12 5.25h12M3.75 6.75h.007v.008H3.75V6.75Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0ZM3.75 12h.007v.008H3.75V12Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm-.375 5.25h.007v.008H3.75v-.008Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
		</svg>
	</div>

  <slot name="text" />
</div>