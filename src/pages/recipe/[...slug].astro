---
import { getCollection, render } from "astro:content";
import Heart from "../../components/icons/Heart.astro";
import Home from "../../components/icons/Home.astro";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const recipesEntries = await getCollection("recipes");

  return recipesEntries.map((recipe) => ({
    params: { slug: recipe.slug },
    props: { recipe },
  }));
}

const {recipe} = Astro.props
const { data, slug} = recipe
const { title, tags, ingredients,images, cooktime, portions, rating, difficulty, lastupdate, recommendations } = data
const {Content } = await render(recipe)

export const prerender = true
---

<Layout title={`${title} - Personal Recipes`}>
  <section class="py-20">
    <article class="flex flex-col gap-y-24" data-recipe={`${slug}-recipe`}>

      <!-- Header -->
      <header class="relative">
        <div class="absolute top-0 left-0">
          <a class="inline-flex items-center justify-center gap-x-3 bg-skyblue-200 text-skyblue-700 rounded-md px-2 py-1 cursor-pointer" href="/">
            <Home size="md" rounded="none" />
            <span slot="text" class="pointer-events-none">Home</span>
          </a>
        </div>

        <div class="text-center">
          <h1 class="">
            <span class="mb-5 text-5xl capitalize font-extrabold tracking-tighter bg-clip-text inline-block text-transparent bg-gradient-to-r from-skyblue-400 to-skyblue-600 sm:text-6xl">{title}</span>
          </h1>

          <div>
            <ul class="flex flex-row gap-x-3 items-center justify-center">
              {
                tags.map((tag) => {
                  return (
                    <li class="whitespace-nowrap rounded-full bg-utorange-100 px-2 py-1 text-sm font-light text-utorange-700">
                      <span>{tag}</span>
                    </li>
                  )
                })
              }
            </ul>
          </div>
        </div>

        <div class="absolute top-0 right-0">
          <Heart size="lg" bg={true} rounded="full" />
        </div>
      </header>

      <div class="grid grid-cols-1 gap-4 lg:grid-cols-6 lg:gap-10 ">
        <!-- Images -->
        <div class="bg-white overflow-hidden rounded-2xl shadow-skyblue-600/15  shadow lg:col-span-3 h-full w-full">
          <picture class="flex flex-row flex-nowrap items-center justify-start">
            {
              images.map((image) => {
                return (
                  <img src={`/images/svg/${image}`} alt="" />
                )
              })
            }
          </picture>
        </div>

        <!-- Ingredients -->
        <div class="bg-white backdrop-blur-sm p-8 rounded-2xl shadow-sm lg:col-span-3 h-full w-full">
          <h2 class="inline-flex items-center justify-start gap-3 text-3xl font-bold mb-6 text-skyblue-800">
            <div class="size-6">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-full">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 6.75h12M8.25 12h12m-12 5.25h12M3.75 6.75h.007v.008H3.75V6.75Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0ZM3.75 12h.007v.008H3.75V12Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm-.375 5.25h.007v.008H3.75v-.008Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
              </svg>            
            </div>
            <span>Ingredients</span>
          </h2>

          <ul class="space-y-3">
            {
              ingredients.map((ingredient) => {
                return (
                  <li data-ingredient={ingredient.id}>
                    <div class="flex items-center justify-start gap-x-3 text-primary">
                      <input type="checkbox" />
                      <span>{ingredient.name}</span>
                    </div>
                  </li>
                )
              })
            }
          </ul>
        </div>

        <!-- Features -->
        <div class="rounded-2xl p-8 col-span-2 bg-white shadow-sm h-full w-full shadow-skyblue-600/15">
          <div class="flex items-center justify-around w-full h-full">
            <div class="flex items-center justify-center gap-x-3">
              <div class="size-6">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-full">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                </svg>
              </div>
    
              <span>{cooktime} min</span>
            </div>

            <div class="flex items-center justify-center gap-x-3">
              <div class="size-6">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-full">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z" />
                </svg>              
              </div>
    
              <span>{portions} portion</span>
            </div>
          </div>
        </div>

        <!-- Rating -->
        <div class="rounded-2xl p-8 bg-white col-span-2 shadow-sm h-full w-fullshadow-skyblue-600/15 ">
          <div class="flex items-center justify-center gap-x-3 w-full h-full" data-value={rating}>
            <div class="inline-flex items-center justify-center">
              <div class="size-6">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-full">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
                </svg>            
              </div>
              <div class="size-6">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-full">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
                </svg>            
              </div>
              <div class="size-6">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-full">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
                </svg>            
              </div>
              <div class="size-6">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-full">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
                </svg>            
              </div>
              <div class="size-6">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-full">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
                </svg>            
              </div>
            </div>

            <span>Rating (20 Votes)</span>
          </div>
        </div>

        <!-- Features -->
        <div class="rounded-2xl p-8 col-span-2 bg-white shadow-sm h-full w-full shadow-skyblue-600/15">
          <div class="inline-flex items-center justify-around gap-x-3 w-full h-full">
            <div class="flex items-center justify-center gap-x-3">
              <div class="size-6">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-full">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M14.25 6.087c0-.355.186-.676.401-.959.221-.29.349-.634.349-1.003 0-1.036-1.007-1.875-2.25-1.875s-2.25.84-2.25 1.875c0 .369.128.713.349 1.003.215.283.401.604.401.959v0a.64.64 0 0 1-.657.643 48.39 48.39 0 0 1-4.163-.3c.186 1.613.293 3.25.315 4.907a.656.656 0 0 1-.658.663v0c-.355 0-.676-.186-.959-.401a1.647 1.647 0 0 0-1.003-.349c-1.036 0-1.875 1.007-1.875 2.25s.84 2.25 1.875 2.25c.369 0 .713-.128 1.003-.349.283-.215.604-.401.959-.401v0c.31 0 .555.26.532.57a48.039 48.039 0 0 1-.642 5.056c1.518.19 3.058.309 4.616.354a.64.64 0 0 0 .657-.643v0c0-.355-.186-.676-.401-.959a1.647 1.647 0 0 1-.349-1.003c0-1.035 1.008-1.875 2.25-1.875 1.243 0 2.25.84 2.25 1.875 0 .369-.128.713-.349 1.003-.215.283-.4.604-.4.959v0c0 .333.277.599.61.58a48.1 48.1 0 0 0 5.427-.63 48.05 48.05 0 0 0 .582-4.717.532.532 0 0 0-.533-.57v0c-.355 0-.676.186-.959.401-.29.221-.634.349-1.003.349-1.035 0-1.875-1.007-1.875-2.25s.84-2.25 1.875-2.25c.37 0 .713.128 1.003.349.283.215.604.401.96.401v0a.656.656 0 0 0 .658-.663 48.422 48.422 0 0 0-.37-5.36c-1.886.342-3.81.574-5.766.689a.578.578 0 0 1-.61-.58v0Z" />
                </svg>            
              </div>
              <span>{difficulty}</span>
            </div>

            <div class="flex items-center justify-center gap-x-3" data-value={lastupdate}>
              <div class="size-6">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-full">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5m-9-6h.008v.008H12v-.008ZM12 15h.008v.008H12V15Zm0 2.25h.008v.008H12v-.008ZM9.75 15h.008v.008H9.75V15Zm0 2.25h.008v.008H9.75v-.008ZM7.5 15h.008v.008H7.5V15Zm0 2.25h.008v.008H7.5v-.008Zm6.75-4.5h.008v.008h-.008v-.008Zm0 2.25h.008v.008h-.008V15Zm0 2.25h.008v.008h-.008v-.008Zm2.25-4.5h.008v.008H16.5v-.008Zm0 2.25h.008v.008H16.5V15Z" />
                </svg>              
              </div>

              <span>Last Update</span>
            </div>
          </div>
        </div>

        <!-- Recomendations -->
        <div class="rounded-2xl p-8 col-span-full bg-white shadow-sm h-full w-full shadow-skyblue-600/15">
          <div>
            <h2 class="inline-flex items-center justify-start gap-3 text-3xl font-bold mb-6 text-skyblue-800">
              <div class="size-6">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 0 1-1.043 3.296 3.745 3.745 0 0 1-3.296 1.043A3.745 3.745 0 0 1 12 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 0 1-3.296-1.043 3.745 3.745 0 0 1-1.043-3.296A3.745 3.745 0 0 1 3 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 0 1 1.043-3.296 3.746 3.746 0 0 1 3.296-1.043A3.746 3.746 0 0 1 12 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 0 1 3.296 1.043 3.746 3.746 0 0 1 1.043 3.296A3.745 3.745 0 0 1 21 12Z" />
                </svg>          
              </div>
              <span>Recommendations</span>
            </h2>

            <ul class="">
              {
                recommendations.map(({id, title, description, img}) => {
                  return (
                    <li data-ingredient={id}>
                      <div class="flex items-center justify-start gap-x-6 text-primary">
                        <picture class="flex place-content-center overflow-hidden rounded-lg">
                          <img class="aspect-square w-full object-cover" src={`/images/svg/${img}`} alt="" />
                        </picture>

                        <div>
                          <h3 class="text-lg font-semibold mb-2 text-skyblue-800">
                            <span>{title}</span>
                          </h3>
                          <div class="max-w-prose">
                            <p>{description}</p>
                          </div>
                        </div>
                      </div>
                    </li>
                  )
                })
              }
            </ul>
          </div>
        </div>

        <!-- Content and tabs -->
        <div class="rounded-2xl p-8 col-span-full bg-white shadow-sm h-full w-full shadow-skyblue-600/15">
          <div class="content-recipe">
            <Content/>
          </div>
        </div>
      </div>
    </article>
  </section>
</Layout>
